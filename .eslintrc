{
  "extends": [
    "airbnb",
    "airbnb-typescript"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "rules": {
    // Allow devDependencies in test files
    "import/no-extraneous-dependencies": ["error", { "devDependencies": ["src/**/*.spec.*", "src/__test__/**/*"] }]
  }
}